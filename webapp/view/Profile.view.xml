<mvc:View
	controllerName="com.dardan.rrafshi.traineehub.controller.Profile"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns:uxap="sap.uxap">
	<Page enableScrolling="false">
		<customHeader>
			<OverflowToolbar>
				<Button icon="sap-icon://nav-back" press="onBackward"/>
				<ToolbarSpacer/>
				<Title text="{i18n>appTitle}"/>
				<ToolbarSpacer/>
				<Avatar
					src="{appData>/userInfo/picture}"
					displaySize="XS"
					displayShape="Circle"
					press="onProfileClicked"/>
			</OverflowToolbar>
		</customHeader>
		<content>
			<uxap:ObjectPageLayout id="profile" class="profileHeader" showFooter="false">
				<uxap:headerContent>
					<Avatar
						src="{appData>/userInfo/picture}"
						displaySize="XL"
						displayShape="Circle"
						press="onProfileClicked"/>
				
					<VBox width="30%">
						<HBox>
							<Title text="{appData>/userInfo/firstName} {appData>/userInfo/familyName}" 
								titleStyle="H3"
								level="H3"/>

							<HBox items="{
								path: 'appData>/userInfo/socialMedia',
								factory: '.createSocialMedia'
							}"/>
						</HBox>

						<HBox>
							<Title class="text-secondary" 
								text="{appData>/userInfo/userName} â€¢ {appData>/userInfo/role}"
								titleStyle="H5"
								level="H5"/>

							<HBox>
								<Image class="text-secondary sapUiSmallMarginBegin" 
									src="resources/images/cake-variant.png"
									width="20px"
									height="20px"/>

								<Title class="text-secondary" 
									text="{
										path: 'appData>/userInfo/birthday',
										type: 'sap.ui.model.type.Date',
										formatOptions: { 
											pattern: 'dd.MM.yyyy'
										}
									}"
									titleStyle="H5"
									level="H5"/>
							</HBox>
						</HBox>

						<Text text="{appData>/userInfo/description}"
							wrappingType="Hyphenated"
							wrapping="true"/>
					</VBox>

					<VBox width="55%">
						<HBox justifyContent="End">
							<Button icon="sap-icon://edit" text="{i18n>edit}" type="Emphasized" press="onEdit"/>
						</HBox>
					</VBox>
				</uxap:headerContent>
				<uxap:footer>
					<Bar>
						<contentRight>
							<Button text="{i18n>save}" icon="sap-icon://save" type="Emphasized" press="onSave"/>
							<Button text="{i18n>cancel}" icon="sap-icon://decline" press="onCancel"/>
						</contentRight>
					</Bar>
				</uxap:footer>
			</uxap:ObjectPageLayout>
		</content>
	</Page>
</mvc:View>
